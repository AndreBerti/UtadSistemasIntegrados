@model List<Peca>;

<div class="container">
	<table class="table table-hover table-bordered mt-5">
		<thead class="table-dark">
			<th>Codigo</th>
			<th>Data</th>
			<th>Hora</th>
			<th>Tempo de Fabricação</th>
			<th>Resultado Teste</th>
			<th>Custo de Produção</th>
			<th>Prejuizo</th>
			<th>Lucro</th>
			<th></th>
		</thead>

		<tbody>
			<p>Total de peças: @Model.Count()</p>
			@if (Model.Count() > 0)
			{
				@foreach (var peca in Model)
				{
					<tr>
						<td>@peca.Codigo</td>
						<td>@peca.Dia</td>
						<td>@peca.Hora</td>
						<td>@peca.Duracao</td>
						<td>@peca.Resultados</td>
						<td>@peca.CustoProducao</td>
						<td>@peca.Prejuizo</td>
						<td>@peca.Lucro</td>
						<td>
									<a asp-action="Detalhes" asp-controller="Home" class="btn btn-worning">Detalhes</a>
									<a asp-action="Detalhes" asp-controller="Home" class="btn btn-info">Editar</a>
									<a asp-action="Detalhes" asp-controller="Home" class="btn btn-danger">Remover</a>

						</td>
					</tr>
				}
			}
		</tbody>
	</table>

</div>